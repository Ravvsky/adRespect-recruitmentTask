{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "./", // Set the baseUrl to the root directory
    "paths": {
      "*": [
        "src/*"
      ] // Map all module names to the "src" directory
    },
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}